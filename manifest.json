{
  "manifest_version": 3,
  "name": "Perky Blinders",
  "version": "0.0.1",
  "description": "What if everyone on Blind was positive?",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://www.teamblind.com/"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}